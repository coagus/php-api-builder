{
  "name": "coagus/php-api-builder",
  "description": "PHP API Builder is a library designed to simplify the construction of APIs in PHP, ensuring clean, well-structured code, and providing out-of-the-box support for connecting a MySQL database as a resource.",
  "homepage": "https://github.com/coagus/php-api-builder",
  "type": "library",
  "keywords": [
        "php",
        "API",
        "Builder"
    ],
  "require-dev": {
    "phpunit/phpunit": "^11.4"
  },
  "require": {
    "php": "^8.1",
    "firebase/php-jwt": "^6.11",
    "monolog/monolog": "^3.5",
    "vlucas/phpdotenv": "^5.6"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ApiBuilder\\": "src/",
      "DemoApi\\": "demo/"
    },
    "files": [
      "src/helpers/constants.php",
      "src/helpers/api-tools.php",
      "src/helpers/utils.php"
    ]
  },
  "authors": [
    {
      "name": "Christian Agustin",
      "email": "christian@agustin.gt",
      "role": "Developer"
    }
  ]
}
